<!-- templates/command_button_settings.jinja2 -->
<form class="form-horizontal">
    <h4>Commands</h4>
    <div class="control-group">
        <label class="control-label" for="commands">Commands</label>
        <div class="controls">
            <!-- Use data-bind to bind to the commands setting -->
            <textarea id="commands" class="form-control" rows="5" name="commands" data-bind="value: settings.plugins.commandbutton.commands"></textarea>
            <p class="help-block">Enter one command per line.</p>
        </div>
    </div>

</form>